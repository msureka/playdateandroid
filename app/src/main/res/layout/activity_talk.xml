<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Lightyellow"
        android:id="@+id/relativeLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Talk to ?"
            android:textSize="20sp"
            android:id="@+id/title_txt"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="save"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:id="@+id/save_txt"
            android:textSize="20sp"

            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lable_border"
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/r88">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Make friends with"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lable_border"
        android:layout_below="@+id/r88"
        android:id="@+id/r99">


        <io.github.rockerhieu.emojicon.EmojiconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Boy \uE001"
            android:textSize="18sp"

            android:id="@+id/talkboy_txt"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/tboy_img"
            android:src="@drawable/tick"
            android:visibility="invisible"
            android:layout_alignTop="@+id/talkboy_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lable_border"
        android:layout_below="@+id/r99"
        android:id="@+id/r111">

        <io.github.rockerhieu.emojicon.EmojiconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Girl \uE002"
            android:textSize="18sp"
            android:id="@+id/talkgirl_txt"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/tgirl_img"
            android:src="@drawable/tick"
            android:visibility="invisible"
            android:layout_alignTop="@+id/talkgirl_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lable_border"
        android:layout_below="@+id/r111"
        android:id="@+id/r222">


        <io.github.rockerhieu.emojicon.EmojiconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Boys &amp; Girls \uE001\uE002"
            android:id="@+id/talkbg_txt"
            android:textSize="18sp"

            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/tbg_img"
            android:src="@drawable/tick"
            android:visibility="invisible"
            android:checked="false"
            android:layout_alignTop="@+id/talkbg_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>