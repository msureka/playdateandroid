<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white"
    tools:context="com.bba.playdate1.setting_meetups_user1">
    <RelativeLayout
        android:id="@+id/header_meetupsetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lable_border">

        <TextView
            android:id="@+id/back_txt_meetupsettingback"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:text="Back"
            android:gravity="center"
            android:fontFamily="@font/helvetica_medium"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/txtview_metupsettingtitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Meetup Details"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/helvetica_bold" />

        <ImageView
            android:id="@+id/meetups_setting_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sharex" />

        <TextView
            android:id="@+id/text_meetups_setting_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"

            />

        </RelativeLayout>
    <ListView
        android:id="@+id/listview_mettup_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:layout_below="@+id/header_meetupsetting" />

</RelativeLayout>
