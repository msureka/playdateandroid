<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <RelativeLayout
        android:id="@+id/cutom_dilaog_invited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape_rounded_rectangle"
        >


        <TextView
            android:id="@+id/textview_emailinvite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:text="Invite by email address"
            android:background="@drawable/boderline_bottom1px"/>




        <TextView
            android:id="@+id/textview_mobileinvite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/textview_emailinvite"
            android:text="Invite by mobile number"
            android:background="@drawable/boderline_bottom1px"/>




        <TextView
            android:id="@+id/textview_contactsinvite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/textview_mobileinvite"
            android:text="Invite contacts"
            android:background="@drawable/boderline_bottom1px"/>

        <TextView
            android:id="@+id/textview_Cancelinvite"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textStyle="normal"
            android:layout_below="@+id/textview_contactsinvite"
            android:text="Cancel"
          android:textColor="@color/colorAccent"/>

    </RelativeLayout>

</RelativeLayout>