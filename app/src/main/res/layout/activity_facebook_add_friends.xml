<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bba.playdate1.Facebook_add_friends">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header_fb"
        android:background="@drawable/lable_border">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Back"
            android:gravity="center"
            android:id="@+id/back_fb"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true" />


        <TextView
            android:id="@+id/nametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Facebook"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />



    </RelativeLayout>

    <SearchView
        android:id="@+id/search_fb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header_fb"
        android:background="@color/lightgray"
        android:queryHint="Search here"
        android:queryBackground="@android:color/transparent"
        android:inputType="textNoSuggestions"
        android:iconifiedByDefault="false"
        >
    </SearchView>

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/progress_bar_fb"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/text_resul_fb"
        android:text="No friends available"
        android:textStyle="normal"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <ListView android:id="@+id/listview_facebook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_fb"
        android:divider="@null">
    </ListView>

</RelativeLayout>
