<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/profileImgview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/defaultboy"
        app:siBorderColor="@color/gray" />

    <TextView
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/reddotimg"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/profileImgview"
        android:layout_toRightOf="@+id/profileImgview"
        android:text=" MOHIT "
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/msgtxt1"
        android:layout_width="230dp"
        android:layout_height="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/profileImgview"
        android:layout_toRightOf="@+id/profileImgview"
        android:layout_below="@+id/nametxt"
        android:layout_marginTop="10dp"
        android:text=" msg "
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/reddotimg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/reddot" />

</RelativeLayout>