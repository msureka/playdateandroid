<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main__info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lable_border">



        <TextView
            android:id="@+id/back_txt_ad_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="5sp"
            android:text="Back"
            android:fontFamily="@font/helvetica_medium"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/circle_img_info"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/circle1"
            android:visibility="visible" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_info"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/f1_info"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <!-- following imageView acts as the boarder which sitting in the background of our main container ImageView -->
            <ImageView
                android:id="@+id/back_imgview_info"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/boypictureframe" />
            <!-- following imageView holds the image as the container to our image -->
            <!-- layout_margin defines the width of our boarder, here it's 1dp -->

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/profileImgview_info"
                android:layout_width="165dp"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:src="@drawable/defaultboy"
                app:siBorderColor="@color/gray"
                app:siBorderWidth="0dp" />

        </FrameLayout>
        <TextView
            android:id="@+id/name_txt_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/f1_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Mohit"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/place_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="Mumbai,India"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/emoji1_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_alignBottom="@+id/emoji2_txt_info"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/emoji2_txt_info"
            android:text="a"
            android:background="@android:color/transparent"
            android:editable="false"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/emoji2_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_txt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:text="a"
            android:background="@android:color/transparent"
            android:editable="false"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/emoji3_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/emoji2_txt_info"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/emoji2_txt_info"
            android:text="a"
            android:background="@android:color/transparent"
            android:editable="false"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/desc_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emoji1_txt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:text="Description Here"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_info"
        android:visibility="invisible">


        <TextView
            android:id="@+id/speaktxt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="I speak"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lang2_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lang1_txt_info"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/lang1_txt_info"
            android:background="@drawable/btn_yellow_backgroung"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:visibility="visible" />


        <TextView
            android:id="@+id/lang1_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speaktxt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_yellow_backgroung"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:visibility="visible" />

        <TextView
            android:id="@+id/lang3_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lang1_txt_info"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/lang1_txt_info"
            android:background="@drawable/btn_yellow_backgroung"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />



        <RelativeLayout
            android:id="@+id/r1_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/lang3_txt_info"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/liketxt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="I like to play "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/likeimg_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/liketxt_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:src="@drawable/everywhere"
                android:visibility="visible" />

            <TextView
                android:id="@+id/likevalue_txt1_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/likeimg_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="Everywhere"
                android:textColor="@color/black1"
                android:textSize="16sp"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r2_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lang3_txt_info"
            android:layout_marginRight="40dp"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/meettxt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Let&apos;s meet"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/meetimg_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/meettxt_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:src="@drawable/mornings"
                android:visibility="visible" />

            <TextView
                android:id="@+id/meetvalue_txt1_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meetimg_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="Mornings"
                android:textColor="@color/black1"
                android:textSize="16sp"
                android:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/favtxt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r2_info"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:text="My favorite activities are"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/act1_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/act2_info"
            android:layout_marginRight="55dp"
            android:layout_toLeftOf="@+id/act2_info"
            android:text="Activity1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/act2_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/favtxt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Activity2"
            android:textColor="@color/black"
            android:textSize="16sp"

            android:visibility="visible" />

        <TextView
            android:id="@+id/act3_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/act2_info"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@+id/act2_info"
            android:text="Activity3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/super_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act1_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="My favorite super hero is"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/super_value_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/super_txt_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_yellow_backgroung"
            android:paddingBottom="8dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="6dp"
            android:text="Mummy"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />





    </RelativeLayout>









</RelativeLayout>