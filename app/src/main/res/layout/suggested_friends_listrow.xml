<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout android:id="@+id/listcell_suggested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boderline_bottom1px"


        >
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/profile_suugested"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/defaultboy"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
        />
        <TextView android:id="@+id/suggested_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/profile_suugested"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="sachin mokashi"
            android:fontFamily="@font/helvetica_medium"
            >
        </TextView>

        <ImageView
            android:id="@+id/image_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp">

        </ImageView>

    </RelativeLayout>

</RelativeLayout>