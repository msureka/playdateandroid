<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header">

        <TextView
            android:id="@+id/play_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="I like to play..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/play_txt"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/rl1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:onClick="show"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/out_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/outdoor" />

                <TextView
                    android:id="@+id/outdoor_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/out_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Outdoor"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/rl2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:onClick="show"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/anywhere_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/everywhere" />

                <TextView
                    android:id="@+id/anywhere_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/anywhere_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Everywhere"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/rl3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:gravity="center"
                android:onClick="show"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/indoor_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/indoor" />

                <TextView
                    android:id="@+id/indoor_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indoor_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:text="Indoor"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

