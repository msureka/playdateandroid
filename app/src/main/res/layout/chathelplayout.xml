<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black1"
    android:clickable="true"
    android:alpha="0.92"
    android:id="@+id/r1">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/header">


            <ImageView
                android:id="@+id/plus_img"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="11dp"
                android:src="@drawable/plusyellow"
                />

            <TextView
                android:id="@+id/addtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/plus_img"
                android:layout_alignStart="@+id/plus_img"
                android:layout_below="@+id/plus_img"
                android:text="ADD"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/Lightyellow"/>




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/butrl_chats"
            android:layout_below="@+id/header"
            >


            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:clickable="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:onClick="show"
                android:padding="10dp"
                android:background="@color/Lightyellow"
                android:text="CHATS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>


        </RelativeLayout>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/butrl_chats"
        android:gravity="center"
        android:textStyle="normal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"

        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Your messages from your Play:Date friends are shown here."/>
    <TextView
        android:id="@+id/txt_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:gravity="center"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="you can add more friends by clicking on the +ADD button on the top right of the screen"/>

    <Button
        android:id="@+id/nextbtn1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/blackborderbtn1"
        android:layout_below="@+id/txt_sec"
        android:text="next"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"/>
</RelativeLayout>


