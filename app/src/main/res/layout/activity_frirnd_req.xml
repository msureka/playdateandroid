<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/relativeLayout11"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/gaga_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/kg_feeling_regular"
            android:gravity="center_horizontal"
            android:text="Friend Request"
            android:textColor="@color/black"
            android:textSize="44sp"
            android:textStyle="normal" />

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/f1"
            android:layout_below="@+id/gaga_txt"
            android:layout_marginTop="20dp">

            <!-- following imageView acts as the boarder which sitting in the background of our main container ImageView -->


            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
               android:background="@color/white"
                android:layout_gravity="center"
                android:id="@+id/back_imgviewqw"/>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/graypicture"
                android:layout_gravity="center"
                android:id="@+id/back_imgview"/>
            <!-- following imageView holds the image as the container to our image -->
            <!-- layout_margin defines the width of our boarder, here it's 1dp -->

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/profileImgview"
                android:layout_gravity="center"
                android:src="@drawable/defaultboy"
                app:siBorderWidth="0dp"
                app:siBorderColor="@color/gray" />

        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/name_txt"
            android:layout_below="@+id/f1"
            android:fontFamily="@font/kg_feeling_regular"
            android:textColor="@color/black1"
            android:text="Name, Age"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mumbai,India"
            android:layout_marginTop="10dp"
            android:id="@+id/place_txt"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/helvetica_normal"
            android:layout_below="@+id/name_txt"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Accept"
            android:background="@drawable/btn_yellow_backgroung"
            android:id="@+id/accept_btn"
            android:layout_below="@+id/place_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="decline"
            android:background="@drawable/whiteborder"
            android:id="@+id/decline_btn"
            android:layout_below="@+id/accept_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>
</RelativeLayout>
