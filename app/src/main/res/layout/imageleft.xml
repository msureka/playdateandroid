<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_txt_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/helvetica_light"
        android:layout_centerHorizontal="true"
        android:text="Date" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/profileImgview_image"
        android:src="@drawable/defaultboy"
        app:siBorderColor="@color/gray"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/msg_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_layout"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/date_txt_img1"
        android:layout_toRightOf="@+id/profileImgview_image"
        >


        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/imagelefts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:siShape="@drawable/shape_rounded_rectangle"
            app:siSquare="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            />




      <!--  <ImageView
            android:id="@+id/imagelefts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            />-->


    </RelativeLayout>





</RelativeLayout>