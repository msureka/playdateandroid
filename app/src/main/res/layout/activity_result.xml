<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<RelativeLayout android:id="@+id/relative_heder"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/Lightyellow"
    >


  <TextView
      android:id="@+id/back_txt_resultimage1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="12dp"
      android:paddingBottom="8dp"
      android:paddingTop="8dp"
      android:paddingRight="15dp"
      android:paddingLeft="15dp"
      android:text=""
      android:background="@drawable/backarrow_one"
      android:fontFamily="@font/helvetica_medium"
      android:textColor="@color/black"
      android:textSize="16sp" />

  <TextView
      android:id="@+id/back_txt_resultimage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="2dp"
      android:paddingBottom="15dp"
      android:paddingTop="15dp"
      android:paddingLeft="40dp"
      android:paddingRight="40dp"
      android:text=""
      android:fontFamily="@font/helvetica_medium"
      android:textColor="@color/black"
      android:textSize="16sp" />

  </RelativeLayout>
  <ImageView
      android:id="@+id/result_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/relative_heder"
      android:layout_above="@+id/txt_saveResultimage"
      android:scaleType="fitCenter"
      />

  <TextView
      android:id="@+id/txt_saveResultimage"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:fontFamily="@font/kg_feeling_regular"
      android:text="Save Picture"
      android:gravity="center"
      android:background="@color/Lightyellow"
      android:textColor="@color/black1"
      android:textSize="19sp"
      android:textStyle="bold"/>
</RelativeLayout>
