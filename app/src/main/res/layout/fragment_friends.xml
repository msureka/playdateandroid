<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/rrr"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header"
        android:background="@drawable/lable_border">

        <ImageView
            android:id="@+id/question_btn"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/joinbtn"
            android:layout_marginBottom="10dp"
            android:src="@drawable/help"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/joinbtn"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_above="@+id/createtxt"
            android:layout_alignLeft="@+id/question_btn"
            android:layout_alignStart="@+id/question_btn"
            android:src="@drawable/join"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/jointxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/question_btn"
            android:layout_alignStart="@+id/question_btn"
            android:layout_below="@+id/joinbtn"
            android:text="JOIN"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:layout_centerVertical="true"
            android:id="@+id/titletxt"
            android:textSize="18sp"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play:Date"
            android:layout_centerVertical="true"
            android:id="@+id/titletxt1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/helvetica_bold"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/plus_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/plus_img1"
            android:layout_alignStart="@+id/plus_img1"
            android:layout_alignTop="@+id/plus_img1"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/addtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/createtxt"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/createtxt"
            android:text="ADD     "
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/plus_img1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/addtxt"
            android:layout_alignStart="@+id/addtxt"
            android:src="@drawable/plus"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/createtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addtxt"
            android:layout_alignBottom="@+id/addtxt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="CREATE  "
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/butrl"
        android:layout_below="@+id/header"
        android:background="@drawable/lable_border">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:src="@drawable/reddot"
            android:visibility="invisible"
            android:id="@+id/redimageView2"
    />

        <TextView
            android:id="@+id/btnchat"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:onClick="show"
            android:padding="10dp"
            android:text="CHATS"
            android:textSize="16sp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/black1" />

        <TextView
            android:id="@+id/btnmeet"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:onClick="show"
            android:padding="10dp"
            android:text="MEET-UPS"
            android:textSize="16sp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/darkgray" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="230dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnchat"
            android:layout_toRightOf="@+id/btnchat"
            android:progressDrawable="@drawable/btn_gray" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnmeet"
            android:layout_toStartOf="@+id/btnmeet"
            android:progressDrawable="@drawable/btn_gray" />

        <ImageView
            android:id="@+id/redimageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/btnmeet"
            android:layout_alignTop="@+id/redimageView2"
            android:layout_marginStart="18dp"
            android:src="@drawable/reddot"
            android:visibility="invisible" />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/home_fragment1"
        android:name="com.bba.playdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/butrl">

    </FrameLayout>

