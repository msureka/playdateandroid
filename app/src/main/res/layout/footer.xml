<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_alignParentBottom="true"
    >
        <ImageView
            android:id="@+id/profile_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/profiletxt"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/profiletxt"
            android:onClick="clickFunk"
            android:layout_marginTop="2dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profiletxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_btn"
            android:layout_marginTop="2dp"
            android:layout_marginStart="35dp"
            android:textSize="12dp"
            android:text=" Profile  "
            android:onClick="clickFunk"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/discover_btn"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@+id/friend_btn"
            android:layout_centerHorizontal="true"
            android:onClick="clickFunk"
            android:src="@drawable/discover" />

        <TextView
            android:id="@+id/discovertxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/profiletxt"
            android:layout_alignBottom="@+id/profiletxt"
            android:layout_centerHorizontal="true"
            android:text="Discover"
            android:textSize="12dp"
            android:onClick="clickFunk"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/friend_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/discovertxt"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:onClick="clickFunk"
            android:layout_marginTop="2dp"
            android:src="@drawable/friends" />

        <TextView
            android:id="@+id/friendtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/friend_btn"
            android:layout_alignStart="@+id/friend_btn"
            android:layout_below="@+id/friend_btn"
            android:text="Friends"
            android:textSize="12dp"
            android:layout_marginLeft="2dp"
            android:onClick="clickFunk"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/badge_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/friendtxt"
            android:layout_toRightOf="@+id/friendtxt"
            android:background="@drawable/badge_bg"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="visible" />
</RelativeLayout>