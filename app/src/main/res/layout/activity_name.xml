<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Lightyellow"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/tiltetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/nametxt"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/namesave_txt"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Save"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/my_child_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="My child's name is:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pname_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_child_txt"
        android:layout_alignStart="@+id/my_child_txt"
        android:layout_below="@+id/my_child_txt"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/kg_feeling_regular"
        android:hint="Type here name.."
        android:singleLine="true"
        android:background="@null"
        android:textStyle="normal"
        android:ellipsize="end"
        android:inputType="text|textNoSuggestions"
        android:textCursorDrawable="@null"
        android:textSize="38sp"
        />

</RelativeLayout>